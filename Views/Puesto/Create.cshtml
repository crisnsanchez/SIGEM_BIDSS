@model SIGEM_BIDSS.Models.TbPuesto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow">

    <div class="card-body">
        <div class="py-2 d-flex  justify-content-between">
            <h4 class="m-0 font-weight-bold text-primary">Registrar Puesto</h4>
            <div class="float-right">
                <a class="btn btn-primary" asp-action="Index">Regresar Al Listado</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="PtoDescripcion" class="control-label"></label>
                        <input asp-for="PtoDescripcion" class="form-control" />
                        <span asp-validation-for="PtoDescripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>




    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
