@model IEnumerable<SIGEM_BIDSS.Models.TbPuesto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Puestos De Trabajo</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Usuario Crea
            </th>
            <th>
                Fecha Crea
            </th>
            <th>
                Usuario Modifica
            </th>
            <th>
                Fecha Modifica
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PtoDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoUsuarioCrea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoFechaCrea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoUsuarioModifica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoFechaModifica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Are.AreDescripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PtoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PtoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PtoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
