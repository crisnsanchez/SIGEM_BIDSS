@model IEnumerable<SIGEM_BIDSS.Models.Puesto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PtoDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtoUsuarioCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtoFechaCrea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtoUsuarioModifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PtoFechaModifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Are)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PtoDescripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoUsuarioCrea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoFechaCrea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoUsuarioModifica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PtoFechaModifica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Are.AreDescripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PtoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PtoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PtoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
