@model IEnumerable<SIGEM_BIDSS.Models.TbEmpleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex  align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Empleados</h6>
        <div class="float-right">
            <a class="btn btn-primary" asp-action="Create">Registrar Empleado</a>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body">

        <div class="container-fluid">

            <div class="table-responsive">
                <table class="table table-bordered mdl-data-table" id="MyTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EmpNombres)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmpApellidos)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.EmpCorreoElectronico)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.EmpPathImage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Pto)
                            </th>
                         
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpNombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpApellidos)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpCorreoElectronico)
                            </td>
                          
                         
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpPathImage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pto.PtoDescripcion)
                            </td>
                           
                            <td>
                                <a class="btn btn-outline-primary btn-xs" asp-action="Edit" asp-route-id="@item.EmpId">Editar</a>
                                <a class="btn btn-outline-warning btn-xs" asp-action="Details" asp-route-id="@item.EmpId">Detalle</a>
                                @*<a class="btn btn-success btn-sm" asp-action="Delete" asp-route-id="@item.AreId">Delete</a>*@
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
