@model IEnumerable<SIGEM_BIDSS.Models.TbEstado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex  align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Listado de Estado</h6>
    </div>
    <!-- Card Body -->
    <div class="card-body">

        <div class="container-fluid">
            <div class="d-flex float-right position-relative">
                <p class="float-right">
                    <a asp-action="Create" class="btn btn-primary">Agregar Estado</a>
                </p>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered mdl-data-table" id="MyTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                        
                            <th>
                                @Html.DisplayNameFor(model => model.EstDescripcion)
                            </th>

                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                               
                                <td style="text-align:center">
                                    @Html.DisplayFor(modelItem => item.EstDescripcion)
                                </td>

                                <td>
                                    <a class="btn btn-outline-primary btn-xs" asp-action="Edit" asp-route-id="@item.EstId">Editar</a>
                                    <a class="btn btn-outline-warning btn-xs" asp-action="Details" asp-route-id="@item.EstId">Detalle</a>
                                    @*<a class="btn btn-success btn-sm" asp-action="Delete" asp-route-id="@item.AreId">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
