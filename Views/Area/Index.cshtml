@model IEnumerable<SIGEM_BIDSS.Models.TbArea>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex  align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Listado de Area</h6>
            <div class="float-right">
                <a class="btn btn-primary" asp-action="Create">Agregar Area</a>
            </div>
        </div>
       
        <!-- Card Body -->
        <div class="card-body">

            <div class="container-fluid">

                <div class="table-responsive">
                    <table class="table table-bordered mdl-data-table" id="MyTable" width="100%" cellspacing="0">
                        <thead>
                            <tr style="text-align:center">
                                <th>
                                    @Html.DisplayNameFor(model => model.AreId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AreDescripcion)
                                </th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.AreId)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.AreDescripcion)
                                    </td>

                                    <td>
                                        <a class="btn btn-outline-primary btn-xs" asp-action="Edit" asp-route-id="@item.AreId">Editar</a>
                                        <a class="btn btn-outline-warning btn-xs" asp-action="Details" asp-route-id="@item.AreId">Detalle</a>
                                        @*<a class="btn btn-success btn-sm" asp-action="Delete" asp-route-id="@item.AreId">Delete</a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
