@model IEnumerable<SIGEM_BIDSS.Models.TbArea>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container-fluid">
        <h1>Áreas De Trabajo</h1>

        <p>
            <a asp-action="Create">Crear Nuevo</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Descripción Área
                    </th>
                    <th>
                        Usuario Crea
                    </th>
                    <th>
                        Fecha Crea
                    </th>
                    <th>
                        Usuario Modifica
                    </th>
                    <th>
                        Fecha Modifica
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreDescripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreUsuarioCrea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreFechaCrea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreUsuarioModifica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AreFechaModifica)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AreId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.AreId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.AreId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>