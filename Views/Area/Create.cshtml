@model SIGEM_BIDSS.Models.TbArea

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card shadow">

        <div class="card-body">
            <div class="py-2 d-flex  justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">Registrar Area</h4>
                <div class="float-right">
                    <a class="btn btn-primary" asp-action="Index">Regresar Al Listado</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      
                        <div class="form-group">
                            <label asp-for="AreDescripcion" class="control-label"></label>
                            <input asp-for="AreDescripcion" class="form-control" />
                            <span asp-validation-for="AreDescripcion" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

           
        </div>
    </div>

