@model SIGEM_BIDSS.Models.TbArea

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex  align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Editar Area</h6>
        <div class="float-right">
            <a class="btn btn-primary" asp-action="Index">Regresar Al Listado</a>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">

        <div class="container-fluid">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AreId" />
                    <div class="form-group">
                        <label asp-for="AreDescripcion" class="control-label"></label>
                        <input asp-for="AreDescripcion" class="form-control" />
                        <span asp-validation-for="AreDescripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreUsuarioCrea" class="control-label"></label>
                        <input asp-for="AreUsuarioCrea" class="form-control" />
                        <span asp-validation-for="AreUsuarioCrea" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreFechaCrea" class="control-label"></label>
                        <input asp-for="AreFechaCrea" class="form-control" />
                        <span asp-validation-for="AreFechaCrea" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreUsuarioModifica" class="control-label"></label>
                        <input asp-for="AreUsuarioModifica" class="form-control" />
                        <span asp-validation-for="AreUsuarioModifica" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreFechaModifica" class="control-label"></label>
                        <input asp-for="AreFechaModifica" class="form-control" />
                        <span asp-validation-for="AreFechaModifica" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>

