@model SIGEM_BIDSS.Models.TbMunicipio

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4">
    <!-- Card Header - Dropdown -->
    <div class="card-header py-3 d-flex  align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Editar Area</h6>
        <div class="float-right">
            <a class="btn btn-primary" asp-action="Index">Regresar Al Listado</a>
        </div>
    </div>
    <!-- Card Body -->
    <div class="card-body">

        <div class="container-fluid">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MunId" />

                    <div class="form-group">
                        <label asp-for="DepId" class="control-label"></label>
                        <select asp-for="DepId" class="form-control" asp-items="ViewBag.DepId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MunId" class="control-label"></label>
                        <input asp-for="MunId" class="form-control" />
                        <span asp-validation-for="MunId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MunNombre" class="control-label"></label>
                        <input asp-for="MunNombre" class="form-control" />
                        <span asp-validation-for="MunNombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>


