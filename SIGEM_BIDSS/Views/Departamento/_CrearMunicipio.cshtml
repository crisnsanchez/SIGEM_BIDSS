@model SIGEM_BIDSS.Models.tbMunicipio

<div class="form-horizontal">
    <div class="card-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.mun_codigo, htmlAttributes: new { @class = "control-label col-sm-2 , required" })
            <div class="col-sm-6">
                <input type="number" id="mun_Codigo" name="mun_Codigo" placeholder="" class="form-control" min="1" maxlength="4" autocomplete="off" />
                <div id="ValidationCodigoCreate">
                    @Html.ValidationMessageFor(model => model.mun_codigo)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.mun_nombre, htmlAttributes: new { @class = "control-label col-sm-2 , required" })
            <div class="col-sm-6">
                <input type="text" onkeypress="return soloLetras(event)" id="mun_Nombre" name="mun_Nombre" placeholder="" class="form-control" maxlength="150" autocomplete="off" style="text-transform:uppercase;" />
                <p style="color:red" id="NombreError">@Html.ValidationMessageFor(model => model.mun_nombre)</p>
                <div id="ValidationCodigoCreate">
                    <p style="color:red"></p>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <button class="btn btn-primary" type="button" id="AgregarMunicipios">Añadir</button>
            </div>

        </div>


        <table id="tblMunicipios" class="table" style="width:100%">
            <thead>
                <tr>
                    <th>Código Municipio</th>
                    <th>Municipio</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/Departamento.js"></script>