@model SIGEM_BIDSS.Models.tbProductoSubcategoria

<div class="form-horizontal">
    <div class="card-body">
        <from>
            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.pscat_Descripcion, "Nombre Subcategoria",new { @class = "control-label col-md-6" })
                    <div class="col-md-11">
                        <input type="text" id="pscat_Descripcion" onkeypress="return soloLetras(event)" placeholder="" class="form-control" maxlength="150" autocomplete="off" style="text-transform:uppercase;" />
                        <div id="DescripcionError">
                            <p style="color:red">
                                @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                            </p>
                        </div>
                    </div>

                    <div class="col-md-1">
                        <button class="btn btn-primary" type="button" id="CrearSubCategoria">Añadir</button>
                    </div>

                    <br />


                </div>
            </div>
        </from>
        <table id="TablaSub" class="table table-bordered table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
