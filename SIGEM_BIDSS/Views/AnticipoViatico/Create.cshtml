@model SIGEM_BIDSS.Models.tbAnticipoViatico

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var test = new SIGEM_BIDSS.Models.tbMunicipio();
}

<link href="~/Content/template/plugins/datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
<div class="card card-primary card-outline">
    <div class="card-header d-flex p-0 ui-sortable-handle">
        <h3 class="card-title p-3">
            <i class="fa fa-upload mr-1"></i>
            Insertar Anticipo Viáticos
        </h3>
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </li>
        </ul>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_JefeInmediato, "Jefe Inmediato", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.DropDownList("Anvi_JefeInmediato", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Anvi_JefeInmediato, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_GralFechaSolicitud, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Anvi_GralFechaSolicitud, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.Anvi_GralFechaSolicitud, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_Cliente, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Anvi_Cliente, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase;", @OnKeyPress = "return soloLetras(event)" } })
                            @Html.ValidationMessageFor(model => model.Anvi_Cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_FechaViaje, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Anvi_FechaViaje, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Anvi_FechaViaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <label class="col-form-label col-md-6" for="inputSuccess"><i class="fa fa-map-marker"></i> Lugar de Destino</label>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label col-md-6">Departamento</label>
                        <div class="col-md-11">
                            @Html.DropDownList("dep_codigo", null, "Seleccione", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Anvi_UsuarioCrea, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.mun_Codigo, "Municipio", new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            <select class="form-control" name="mun_Codigo" id="mun_Codigo">
                                <option>Seleccione</option>
                            </select>
                            @Html.ValidationMessageFor(model => model.mun_Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_PropositoVisita, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Anvi_PropositoVisita, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Anvi_PropositoVisita, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_DiasVisita, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.EditorFor(model => model.Anvi_DiasVisita, new { htmlAttributes = new { @class = "form-control", @OnKeyPress = "return soloNumeros(event)" } })
                            @Html.ValidationMessageFor(model => model.Anvi_DiasVisita, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_tptran_Id, "Tipo Transporte", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            @Html.DropDownList("Anvi_tptran_Id", null, "Seleccione", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Anvi_tptran_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_Hospedaje, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Anvi_Hospedaje)
                            @Html.ValidationMessageFor(model => model.Anvi_Hospedaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Anvi_Comentario, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-11">
                            <textarea class="form-control" name="Anvi_Comentario"></textarea>
                            @Html.ValidationMessageFor(model => model.Anvi_Comentario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Content/template/plugins/datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/app/ValidacionesGenerales.js"></script>
<script src="~/Scripts/app/Solicitud/AnticipoViatico.js"></script>